<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="2" android:baselineAligned="false">
        <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1" android:background="#cccc0f"
                android:id="@+id/lw1_tr">
        </FrameLayout>
        <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="2" android:background="#0fcccc"
                android:id="@+id/lw1_tl">
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="1" android:baselineAligned="false">
        <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="2" android:background="#0f0fcc"
                android:id="@+id/lw1_cr">
        </FrameLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1">
            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="1" android:background="#cc0fcc"
                    android:id="@+id/lw1_cc">
            </FrameLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="1" android:baselineAligned="false">
                <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1" android:background="#cc0000"
                        android:id="@+id/lw1_bc">
                </FrameLayout>
                <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1" android:background="#00cc00"
                        android:id="@+id/lw1_bl">
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>